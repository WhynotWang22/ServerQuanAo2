<div class="datalist">
    <div class="col-12" id="headerlist">
        <div class="btnaddbanner">
            <a href="/banners/add" class="btn btn-primary">Thêm</a>
        </div>
    </div>
    <div class="tables">
        <h3>Danh sách</h3>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Ảnh sản phẩm</th>
                <th>Loại</th>
                <th>Size</th>
                <th>Màu</th>
                <th>Còn lại</th>
                <th>Hành động</th>
            </tr>
            </thead>
            <tbody>
            {{#each listProduct}}
                <tr>
                    <td scope="row">{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.desc}}</td>
                    <td><img src="{{this.img}}" style="width: 50px;height: 50px;align-items: center"></td>
                    <td>{{this.category}}</td>
                    <td>{{this.sizes}}</td>
                    <td>{{this.color}}</td>
                    <td>{{this.stock}}</td>
                    <!--                    <td><img src="" width="100px" style="vertical-align: center"></td>-->
                    <td>
                        <a href="/pro/edit/{{this._id}}" class="btn btn-primary" id="btnAction">Sửa</a>
                        <a href="/pro/delete/{{this._id}}" onclick="return confirm('Bạn có muốn xóa không?')" id="btnAction" class="btn btn-danger">Xóa</a>
                    </td>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

