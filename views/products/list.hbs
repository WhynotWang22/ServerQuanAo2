<style>
    tr{
        border: 1px solid black;
    }
    th{
        border: 1px solid black;
    }
</style>
<div class="datalist">
    <div class="col-12" id="headerlist">

    </div>
    <div class="tables" style="background: #ffffff; border: 2px solid black;">
        <h3>Danh sách</h3>
        <table class="table table-bordered" >
            <thead>
            <tr>
                <!--                <th>ID</th>-->
                <th>title</th>
                <th>price</th>
                <th>desc</th>
                <th>Image</th>
                <th>category</th>
                <th>size</th>
                <th>color</th>
                <th>stock</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                {{#each listProduct}}
                <tr>
                    <td scope="row">{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.desc}}</td>
                    <td>{{this.img}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.sizes}}</td>
                    <td>{{this.color}}</td>
                    <td>{{this.stock}}</td>
<!--                    <td><img src="" width="100px" style="vertical-align: center"></td>-->
                    <td>
                        <a href="/products/edit/" class="btn btn-primary" id="btnAction">Edit</a>
                        <a href="/products/delete/" onclick="return confirm('Bạn có muốn xóa không?')" id="btnAction" class="btn btn-danger">Del</a>
                    </td>
                </tr>


            {{/each}}
            </tbody>
        </table>
    </div>
</div>