
<form class="adddata" method="POST" action="" enctype="multipart/form-data" >
    <h1>Update User</h1>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" value={{UserData.email}} class="form-control" name="user_email">
    </div>
    <div class="mb-3">
        <label  class="form-label">Full name</label>
        <input type="text" value={{UserData.full_name}} class="form-control" name="user_full_name">
    </div>
    <div class="mb-3">
        <label class="form-label">phone_number</label>
        <input type="Number" value={{UserData.phone_number}} class="form-control" name="user_phone_number" rows="4">
    </div>
    <div class="mb-3">
        <label class="form-label">address</label>
        <input type="text" value={{UserData.address}} class="form-control" name="user_address" rows="4">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="role" value="Admin" id="flexRadioDefault1">
        <label class="form-check-label" for="flexRadioDefault1">
            Admin
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="role" value="Employee" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
            Employee
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="role" value="User" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
            User
        </label>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">ch·ªçn File</label>
        <input type="file" name="avatar" class="form-control form-control-lg">
    </div>
    {{#if msg}}
        <p class="text-danger">{{{msg}}}</p>
    {{/if}}
    <button type="submit" class="btn btn-primary">Submit</button>


</form>