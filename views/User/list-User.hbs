<div class="datalist">
    <div class="col-12" id="headerlist">
        <div class="btnaddbanner">
            <a href="/users/add" class="btn btn-primary">Thêm</a>
        </div>
    </div>
    <div class="tables">
        <h3>Danh sách</h3>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Email</th>
                <th>Họ tên</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Role</th>
                <th>Ảnh</th>
            </tr>
            </thead>
            <tbody>
            {{#each listUser}}
                <tr>
                    <td scope="row">{{this.email}}</td>
                    <td>{{this.full_name}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.phone_number}}</td>
                    <td>{{this.role}}</td>
                    <td><img src="{{this.avatar}}" style="width: 50px;height: 50px;align-items: center"></td>
                    <td>
                        <a href="/users/edit/{{this._id}}" class="btn btn-primary" id="btnAction">Sửa</a>
                        <a href="/users/delete/{{this._id}}" onClick="return confirm('Bạn có muốn xóa không?')" id="btnAction"
                           class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>