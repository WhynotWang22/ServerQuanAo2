<form class="adddata" method="post" >
  <h1>Reset Password</h1>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">New Password</label>
        <input type="password" name="newPassword" class="form-control" id="exampleInputPassword1" required="">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
        <input type="password" name="ConfirmPassword" class="form-control" id="exampleInputPassword1" required="">
    </div>
    {{#if msg}}
        <p class="text-danger">{{{msg}}}</p>
    {{/if}}
    <button type="submit" class="btn btn-primary">Submit</button>
</form>