<div class="app-title">
    <ul class="app-breadcrumb breadcrumb">

        <li class="breadcrumb-item"><a href="#">Đổi mật khẩu</a></li>
    </ul>
</div>
<div >
    <div class="col-md-12">

        <div class="tile" style="width: 800px; margin: auto; ">

            <h1 class="tile-title">Đổi mật khẩu</h1>
            <div class="tile-body">
                <form class="adddata" method="post" >

                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label"> Mật khẩu mới </label>
                        <input type="password" name="newPassword" class="form-control" id="exampleInputPassword1" required="">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Nhập lại mật khẩu mới</label>
                        <input type="password" name="ConfirmPassword" class="form-control" id="exampleInputPassword1" required="">
                    </div>
                    {{#if msg}}
                        <p class="text-danger">{{{msg}}}</p>
                    {{/if}}
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>

