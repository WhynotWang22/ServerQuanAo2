<head>
    <title>Danh sách nhân viên | Quản trị Admin</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel='stylesheet' href='/stylesheets/main.css'/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- or -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">

    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">

</head>
<div class="app-title" style="margin-top: 25px">
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item active"><a href="#"><b>Quản lý thông báo</b></a></li>
    </ul>
    <div id="clock"></div>
</div>

<div class="col-md-12">
    <div class="tile">
        <div class="tile-body">
            <div class="row element-button">
                <div class="col-sm-2">

                    <a class="btn btn-add btn-sm" href="/notification/add" title="Thêm"><i
                            class="fas fa-plus"></i>
                        Thêm thông báo</a>
                </div>
            </div>
            <div class="row">
                <input class="form-control" id="myInput" type="text" placeholder="Tìm kiếm.."
                       style="margin-bottom: 10px">
                <table class="table table-hover table-bordered" id="sampleTable">
                    <thead>
                    <tr>
                        <th scope="col">Tiêu đề</th>
                        <th scope="col">Nội dung</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody id="myTableNoti">
                    {{#each itemList}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.body}}</td>
                            <td>
                                <a href="/notification/edit/{{this._id}}"
                                   style="margin-left: 10px; margin-right: 10px; margin-top: 10px">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/notification/delete/{{this._id}}"
                                   onclick="return confirm('Bạn có muốn xóa không?')"
                                   style="margin-left: 10px; margin-right: 10px; margin-top: 10px">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTableNoti tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</div>

